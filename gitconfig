[push]
  default = simple
  followTags = true

[pull]
  rebase = true

[alias]
  p = push-origin-or-fork
  pushb = "!f() { git push -u origin $(git current-branch); }; f"
  pushfl = push --force-with-lease
  current-branch = rev-parse --abbrev-ref HEAD
  co = checkout
  amend = commit -v --amend
  c = commit -v
  mlog = log --oneline origin/master..
